<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping package="tipi.bag">

<class name="Item"
	   table="articoli" lazy="true">

	<!-- Common id property. -->
	<id name="id"
		type="long"
		column="ItemID">
		<generator class="identity"/>
	</id>

	<!-- A versioned entity. -->
	
	<!-- Name of the item is immutable. -->
	<property   name="name"
				type="string"
				column="Nome"
				length="255"
				not-null="true"
				update="false"/>
				
	<property   name="description"
				type="string"
				column="Descrizione"
				length="255"
				not-null="true"
				update="false"/>
				
	<idbag name="images" lazy="true" table="immagini">
		<collection-id type="long" column="ImmagineID">
			<generator class="sequence"/>
		</collection-id>
		<key column="FKArticoli "/>
		<element type="string" column="PathImmagine" not-null="true"/>
	</idbag>
	
	

</class>


</hibernate-mapping>